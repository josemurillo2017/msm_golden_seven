<h1> Update Database!</h1>

<form  action="/update_movie">
  <div>
    <label for="the_title"> Title :</label>
    <input id="the_title" type="text" name="the_title" value = "<%= @object.title %>">
  </div>
  <div>
    <label for="the_year"> Year :</label>
    <input id="the_year" type="text" name="the_year" value = "<%= @object.year %>">
  </div>
  <div>
    <label for="the_duration"> Duration :</label>
    <input id="the_duration" type="text" name="the_duration" value = "<%= @object.duration %>">
  </div>
  <div>
    <label for="the_description"> Description :</label>
    <input id="the_description" type="text" name="the_description" value = "<%= @object.description %>">
  </div>
  <div>
    <label for="the_image_url"> Image URL :</label>
    <input id="the_image_url" type="text" name="the_image_url" value = "<%= @object.image_url %>">
  </div>
  <div>
      <input name="id" value = "<%= @id %>" type="hidden">
  </div>
  <div>
    <button> Update!</button>
  </div>
</form>
